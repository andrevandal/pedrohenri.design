---
import { generateImageProps } from '@utils'
import type { HTMLAttributes } from 'astro/types'

type Props = {
  src: string
  sizes: string
  alt: string
} & HTMLAttributes<'img'>

const { src, sizes, alt, ...props } = Astro.props

const imageProps = generateImageProps(src, sizes)
---

<img {...imageProps} alt={alt || ' '} {...props} />
